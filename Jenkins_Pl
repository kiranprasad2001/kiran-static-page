    }
  } */
  stage('DeployApp'){
    steps{
      sshagent(['tomcatServer']) {
        sh "scp -o StrictHostKeyChecking=no target/kiran-static-page.war ec2-user@18.222.129.139:/opt/tomcat9/webapps"
      }
    }
  }
//  stage('S3 Upload'){
