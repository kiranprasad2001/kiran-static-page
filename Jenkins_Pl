    steps{
      git branch: 'dev', credentialsId: 'GitHub', url: 'https://github.com/kiranprasad2001/kiran-static-page.git'
    }
  }
  stage('Build'){
    steps{
      sh "mvn clean package"
    }
  }
/*  stage('testReport'){
